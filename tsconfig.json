{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2016",
        "jsx": "react",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2016"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "scripts",
        "storage"
    ]
}
